
    <div class="details_table row">
        <div class="col">
            <h4>INTERNSHIPS</h4>
        </div>
        <div class="col col-7">
            <% intern.slice().reverse().forEach(element => { %>               
            <div class="detailDiscBox" style="position: relative;">
                <div class="icon-btn-position">
                    <!-- Edit btn -->
                    <input type="hidden" name="editId" value="<%= element._id %>">
                    <button type="button" class="btn delbtn" onclick="internOldInput(this)" data-bs-toggle="modal" data-bs-target="#editInternDetailModal"><i class="fas fa-pen"></i></button>
                    <!-- Delete btn -->
                    <input type="hidden" name="delId" value="<%= element._id %>">
                    <button type="button" class="btn delbtn" value="internshipDetails" onclick="deleteBox(this)"><i class="fas fa-trash-alt"></i></button>

                </div>
                <div class="detailDisc">
                    <p class="line" style="font-weight: 600; color: #333;"><%= element.internProfile %> </p>
                    <p class="line"><%= element.internOrganisation %> </p>
                    <p class="line"><%= element.internLocation %> </p>
                    <p class="line"><%= element.startDate.toString().slice(3, 15) +" - "+ element.endDate.toString().slice(3, 15) %> </p>
                </div>
            </div>
            <% }) %>
            <button type="button" class="btn button" data-bs-toggle="modal" data-bs-target="#internDetailModal" onclick="clearInput()">+ Add internship</button>
        </div>

    </div>