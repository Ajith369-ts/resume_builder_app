
    <div class="details_table row">
        <div class="col">
            <h4>PERSONAL DETAILS</h4>
        </div>
        <div class="col col-7">  
            <% if (Object.keys(personal).length === 0) { %>
                <% console.log(personal) %> 
                <div class="detailDiscBox" style="position: relative;">
                    <div class="icon-btn-position">
                        <!-- Edit btn -->
                        <input type="hidden" name="editId" value="<%= personal._id %>">
                        <button type="button" class="btn delbtn" onclick="oldInput(this)" data-bs-toggle="modal" data-bs-target="#editInternDetailModal"><i class="fas fa-pen"></i></button>
                        <!-- Delete btn -->
                        <input type="hidden" name="delId" value="<%= personal._id %>">
                        <button type="button" class="btn delbtn" onclick="deleteBox(this)"><i class="fas fa-trash-alt"></i></button>
                        
                    </div>
                    <div class="detailDisc">
                        <p class="line" style="font-weight: 600; color: #333;"><%= personal.firstName %> </p>
                        <p class="line"><%= personal.email %> </p>
                        <p class="line"><%= personal.address %> </p>
                    </div>
                </div>
            <% } %>           
            <button type="button" class="btn button" data-bs-toggle="modal" data-bs-target="#userDetailModal" onclick="clearInput()">+ Add Personal Details</button>
        </div>

    </div>