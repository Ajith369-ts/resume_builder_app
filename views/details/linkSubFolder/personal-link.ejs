
<% if(userDetails.length !== 0){ %>

    <div class="user-detail detailDisc">
        <p class="line highlight"><%= userDetails[0].firstName.toUpperCase() %> <%= userDetails[0].lastName.toUpperCase() %> </p>
        <button type="button" class="btn delbtn" onclick="oldInput(this)" data-bs-toggle="modal" data-bs-target="#userDetailModal"><i class="fas fa-pen"></i></button>
        <p class="line"><%= userDetails[0].phoneNo %></p>
        <p class="line"><%= userDetails[0].email %></p>
        <p class="line"><%= userDetails[0].address %></p>
    </div>

  <% } else{ %>  
    
    <div class="details_table row">
        <div class="col">
            <h4>PERSONAL DETAILS</h4>
        </div>
        <div class="col col-7">  
            <% if (Object.keys(personal).length === 0 && userDetails.length !== 0) { %>
                <div class="detailDiscBox" style="position: relative;">
                    <div class="icon-btn-position">
                        <!-- Edit btn -->
                        <input type="hidden" name="editId" value="<%= personal._id %>">
                        <button type="button" class="btn delbtn" onclick="oldInput(this)" data-bs-toggle="modal" data-bs-target="#editUserDetailModal"><i class="fas fa-pen"></i></button>
                        <!-- Delete btn -->
                        <input type="hidden" name="delId" value="<%= personal._id %>">
                        <button type="button" class="btn delbtn" onclick="deleteBox(this)"><i class="fas fa-trash-alt"></i></button>
                        
                    </div>
                </div>
            <% } %>           
            <button type="button" class="btn button" data-bs-toggle="modal" data-bs-target="#userDetailModal" onclick="clearInput()">+ Add Personal Details</button>
        </div>
    </div>

<% } %>